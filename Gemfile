# frozen_string_literal: true

source 'https://rubygems.org'

# Asciidoctor core
gem 'asciidoctor', '~> 2.0'

# Generación de PDF
gem 'asciidoctor-pdf', '~> 2.3'

# Generación de EPUB
gem 'asciidoctor-epub3', '~> 2.1'

# Resaltado de sintaxis (opcional, para bloques de código)
gem 'rouge', '~> 4.0'

# Diagramas (opcional, para diagramas técnicos)
gem 'asciidoctor-diagram', '~> 2.3'

# Matemáticas (opcional, para fórmulas)
gem 'asciidoctor-mathematical', '~> 0.3'

# HTML multipágina (opcional, para generar un archivo por capítulo)
gem 'asciidoctor-multipage', '~> 0.0'

# Base64 (requerido para Ruby 3.4+ compatibilidad)
gem 'base64'
